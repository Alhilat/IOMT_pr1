    <script>
        // ================= CONFIGURATION =================
        const SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbyFXp4ljR6vltbF_VIudulHpfdTDpHz-JuRLq0yBRpD6RCb4cK8NnhLNRIWKBdkdu41/exec'; // <--- PASTE URL HERE
        // =================================================

        const statusDot = document.getElementById('statusDot');
        const statusText = document.getElementById('statusText');

        async function fetchData() {
            try {
                // Add ?mode=read to the URL to trigger the read function in Apps Script
                const response = await fetch(SCRIPT_URL + '?mode=read');
                const data = await response.json();

                updateUI(data);
                
                statusDot.classList.add('live');
                statusText.textContent = "Live";
            } catch (error) {
                console.error('Error fetching data:', error);
                statusDot.classList.remove('live');
                statusText.textContent = "Offline / Error";
            }
        }

        function updateUI(data) {
            // Helper to check if value is valid
            const val = (v) => v !== undefined && v !== '' ? v : '--';

            // Round values to 1 decimal place if they are numbers
            const format = (n) => isNaN(n) ? n : Number(n).toFixed(1);

            document.getElementById('bpm').innerText = Math.round(data.avgBpm || data.bpm || 0);
            document.getElementById('bodyTemp').innerText = format(data.bodyTemp);
            document.getElementById('spo2').innerText = Math.round(data.spo2 || 0);
            document.getElementById('roomTemp').innerText = format(data.roomTemp);
            document.getElementById('roomHum').innerText = Math.round(data.roomHum || 0);

            // Format Timestamp
            const date = new Date(data.timestamp);
            document.getElementById('timestamp').innerText = "Last Updated: " + date.toLocaleTimeString();
        }

        // Fetch immediately, then every 10 seconds
        fetchData();
        setInterval(fetchData, 10000); 

    </script>
